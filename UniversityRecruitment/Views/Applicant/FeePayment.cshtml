@model UniversityRecruitment.Models.AppliedForm
@{
    ViewBag.Title = "FeePayment";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
}

<style>
    .mysheader {
        background: #096499;
    }
</style>

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Fee Payment</h3>
    </div>
    <div class="col-md-7 align-self-center">

    </div>
    <div class="">
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title my-2">LIST OF POST APPLIED (PENDING PAYMENT)</h4>
                    @*<h6 class="card-subtitle">Add class <code>.full-color-table .full-info-table .hover-table</code></h6>*@
                    <div class="table-responsive">
                        <table class="table full-color-table full-info-table hover-table">
                            <thead>
                                <tr>
                                    <th>Post Code</th>
                                    <th>Form No.</th>
                                    <th>Type Of Post</th>
                                    <th>Post For</th>
                                    <th>Applying Category</th>
                                    <th>Applied At</th>
                                    <th>Fee Amount</th>
                                    <th>Select to Pay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.list != null)
                                {
                                    if (Model.list.Count() > 0)
                                    {
                                        foreach (var itm in Model.list)
                                        {
                                            if (itm.AllowPayment == 1 && itm.FeePaid == 0)
                                            {
                                                <tr>
                                                    <td>@itm.PostCode</td>
                                                    <td>@itm.FormNo</td>
                                                    <td>@itm.PostType</td>
                                                    <td>@itm.PostName</td>
                                                    <td>@itm.ApplyingCategory</td>
                                                    <td>@itm.SystemDate</td>
                                                    <td>@itm.FeeAmount</td>
                                                    @if (itm.FeePaid == 0)
                                                    {
                                                        <td><input class="chk" type="checkbox" /></td>
                                                    }
                                                    else { }
                                                </tr>
                                            }
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="form-group m-b-0">
                        <div class=" col-sm-12">
                            <button type="submit" class="btn btn-info waves-effect waves-light m-t-10">Pay Fee for Selected Forms</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title my-2">LIST OF POST APPLIED (FEE PAID)</h4>
                    @*<h6 class="card-subtitle">Add class <code>.full-color-table .full-info-table .hover-table</code></h6>*@
                    <div class="table-responsive">
                        <table class="table full-color-table full-info-table hover-table">
                            <thead>
                                <tr>
                                    <th>Post Code</th>
                                    <th>Form No.</th>
                                    <th>Type Of Post</th>
                                    <th>Post For</th>
                                    <th>Applying Category</th>
                                    <th>Applied At</th>
                                    <th>Payment Reference No.</th>
                                    <th>Transaction Id</th>
                                    <th>Transaction Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.list1 != null)
                                {
                                    if (Model.list1.Count() > 0)
                                    {
                                        foreach (var itm in Model.list1)
                                        {
                                            <tr>
                                                <td>@itm.PostCode</td>
                                                <td>@itm.FormNo</td>
                                                <td>@itm.PostType</td>
                                                <td>@itm.PostName</td>
                                                <td>@itm.ApplyingCategory</td>
                                                <td>@itm.SystemDate</td>
                                                <td>@itm.ReferenceNo</td>
                                                <td>@itm.TransactionId</td>
                                                <td>@itm.TransactionDate</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
