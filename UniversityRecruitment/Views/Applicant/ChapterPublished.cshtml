<div class="container-fluid">




    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header mysheader">
                    <h4 class="m-b-0 text-white">
                        2. (A) (II) CHAPTERS PUBLISHED IN BOOKS / EDITED BOOKS
                    </h4>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label class="col-sm-12">Title with page nos.</label>
                                <div class="col-sm-12">
                                    <input type="text" id="Title" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Date/Year of Publication</label>
                                <div class="col-sm-12">
                                    <input type="text" id="PublicationDate" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Book/Title editor &amp; publisher</label>
                                <div class="col-sm-12">
                                    <input type="text" id="Publisher" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Category</label>
                                <div class="col-sm-12">
                                    <input type="text" id="Category" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Publisher Type</label>
                                <div class="col-sm-12">
                                    <select id="PublisherType" class="form-control">
                                        <option value="-1">-- select --</option>
                                        <option value="National">National</option>
                                        <option value="International">International</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">ISSN / ISBN No.</label>
                                <div class="col-sm-12">
                                    <input type="text" id="Isbn" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">No. of co-authors</label>
                                <div class="col-sm-12">
                                    <input type="text" id="NoOfCoAuthors" class="form-control only-numeric">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        
                        
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Whether you are main author</label>
                                <div class="col-sm-12">
                                    <select id="IsMainAuthor" class="form-control">
                                        <option value="-1">-- select --</option>
                                        <option value="true">Yes</option>
                                        <option value="false">No</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Upload Scanned Attachment</label>
                                <div class="col-sm-12">
                                    <input type="file" class="form-control" id="attachment" onchange="Fileupload(this)">
                                    <span id="attachmentAnchor" style="display: none;" class="input-group-text btn-download"></span>
                                </div>
