@model UniversityRecruitment.Models.DesignofNewCurricula
 
    @{
        ViewBag.Title = "DesignofNewCurricula";
        Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
    }
    <style>
        .mysheader {
            background: #096499;
        }
    </style>
    <div class="row page-titles">
        <div class="col-md-12 align-self-center">
            <h3 class="text-themecolor">
                Category 3: Creation of ICT mediated Teaching Learning pedagogy and content and development of new and innovative courses and curricula
            </h3>
            <p>3. (b) Design of new curricula & courses</p>
        </div>
        <div class="col-md-7 align-self-center">

        </div>
        <div class="">
            <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
        </div>
    </div>

    <div class="container-fluid">




        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header mysheader">
                        <h4 class="m-b-0 text-white">
                            3. (B) DESIGN OF NEW CURRICULA & COURSES
                        </h4>
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-5">
                                <div class="form-group">
                                    <label for="" id="" class="col-sm-12">Title of Curricula and Course</label>
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @Id = "Title", @name = "Title" })
                                        @*<span id="body_reqBookTitle" class="validator" style="display:none;">enter value</span>*@
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label for="" id="" class="col-sm-12">Level</label>
                                    <div class="col-sm-12">
                                        @Html.DropDownListFor(Model => Model.Level, new List<SelectListItem>
                                              {
                                                  new SelectListItem{ Text="UG", Value = "National" },
                                                    new SelectListItem{ Text="PG", Value = "International" },
                                                     
                                              }, "--Select--", new { @class = "form-control", @autocomplete = "off", })
                                        @*<select name="" id="" class="form-control">
                                            <option value="-1">-- select --</option>
                                            <option value="National">UG</option>
                                            <option value="International">PG</option>

                                        </select>*@
                                        @*<span id="" class="validator" style="display:none;">select an item</span>*@
                                    </div>
                                </div>
                            </div>


                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label for="" id="" class="col-sm-12">No. of Curricula / Courses</label>
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(m => m.Courses, new { @class = "form-control", @Id = "Courses", @name = "Courses" })
                                        @*<span id="" class="validator" style="display:none;">enter value</span>*@
                                    </div>
                                </div>
                            </div>
                             
                        </div>

                        <div class="row">
                             
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="" id="" class="col-sm-12">Approval of competent authority (if any)</label>
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(m => m.Authority, new { @class = "form-control", @Id = "Authority", @name = "Authority" })
                                        @*<span id="body_reqNoOfCoAuthor" class="validator" style="display:none;">enter value</span>*@
                                    </div>
                                </div>
                            </div>



                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="" id="" class="col-sm-12">Upload Scanned Attachment</label>
                                    <div class="col-sm-12">
                                        <input type="file" class="form-control" id="UploadDesignofCurricula" onchange="Fileupload(this)">
                                        <span id="UploadDesignofCurriculaAnchor" style="display: none;" class="input-group-text btn-download"></span>
                                        @*<span id="body_reqBookUpload" class="validator" style="display:none;">upload file</span>*@
                                    </div>
                                    <span class="smallpdf">(File Format:JPG/JPEG and PDF । Max File Size: 2 MB)</span>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label for="" id="" class="col-sm-12">&nbsp;</label>
                                    <div class="col-sm-12">
                                        <a id="body_btnBookAdd" class="btn btn-primary btn-shadow" href="#" onclick="AddCurricula()"><span class="fa fa-plus-circle"></span> Add</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                         
                        <div class="row mt-3">
                            <div class="col-sm-12">

                                <div class="table-responsive">
                                    <table class="table full-color-table full-info-table hover-table" id="tab">
                                        <thead>
                                            <tr class="">
                                                <th>Title of Curricula &amp; Course</th>
                                                <th>Level</th>
                                                <th>No. of Curricula / Courses</th>
                                                <th>Approval of competent authority (if any)</th>
                                                @*<th>API Score</th>*@
                                                <th>Attachment</th>
                                                 
                                            </tr>
                                        </thead>
                                        <tbody id="TblCurricula"></tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="card-shadow-primary col-sm-12 card bg-secondary">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <a id="" class="btn btn-warning text-dark shadow" href="#" onclick="Savedata()"><span class="fa fa-save"></span> Save</a>
                            <a id="body_BtnSaveNext" class="btn btn-success text-dark shadow pull-right d-none" href="#"><span class="fa fa-save"></span> Save &amp; Next <span class="fa fa-chevron-circle-right"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function AddCurricula() {
        debugger;
        var Title = $('#Title').val();
        var Level = $('#Level').val();
        var Level1 = $('#Level option:selected').text();
        var Courses = $('#Courses').val();
        var Authority = $('#Authority').val();

        var href = $('.anchor').attr('href');
         if ($('#Title').val() == "" || $('#Title').val() == null || $('#Title').val() == undefined) {
                swal("", "please Enter Title", "warning")
                return false;
            }
            if ($('#Level').val() == "" || $('#Level').val() == null || $('#Level').val() == undefined) {
                swal("", "Please Select   Level  ", "warning")
                return false;
            }

          if ($('#Courses').val() == "" || $('#Courses').val() == null || $('#Courses').val() == undefined) {
                swal("", "please enter  Courses", "warning")
                return false;
         }
          if ($('#Authority').val() == "" || $('#Authority').val() == null || $('#Authority').val() == undefined) {
                swal("", "please enter  Approval of competent authority ", "warning")
                return false;
         }
         if ($('#UploadDesignofCurricula').val() == "" || $('#UploadDesignofCurricula').val() == null || $('#UploadDesignofCurricula').val() == undefined) {
                swal("", "please Upload   Image ", "warning")
                return false;
            }


        var row = '<tr><td class="Title1">' + Title + '</td><td class="Level2">' + Level1 + '</td><td class="Courses1" >' + Courses + '</td><td  class="Authority1">' + Authority + '</td><td><span class="input-group-text btn-download" href=' + href +'><a href=' + href +' target="_blank" class="btn btn-warning dldbtn"><i class="fa fa-download"></i></a></span></td><td class="Level1 d-none">' + Level + '</td></tr>';

         $('#TblCurricula').append(row);
         $('#Title').val('');
        $('#Level').val('');
        $('#Courses').val('');
        $('#Authority').val('');
        $('#UploadDesignofCurricula').val('');



    }


      function Savedata() {
         debugger;

        var model = {
            DesignCurriculaList: [],


        }

        var entrylist = [];

        $('#tab #TblCurricula tr').each(function (i, d) {
            var Entry = {};
            Entry.Title = $(this).find('.Title1').text();
            Entry.Level = $(this).find('.Level1').text();
            Entry.Courses = $(this).find('.Courses1').text();
            Entry.Authority = $(this).find('.Authority1').text(); 
            Entry.UploadDesignofCurricula = $(this).find('.dldbtn').attr('href');
            entrylist.push(Entry)

        });

         if (entrylist == 0) {
             swal("", "please fill all field", "warning")
             return false;
         }
         else {

         }

        if (entrylist != 0 ) {
            $.each(entrylist, function (key, value) {

                model.DesignCurriculaList.push(value);
            })

            $.ajax({
                type: 'post',
                url: '/Applicant/SaveCurriculaDetails',
                data: JSON.stringify(model),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {

                        if (data.ResponseCode == 0) {
                            swal("", data.ResponseMessage, "success")

                            $('#body_BtnSaveNext').removeClass('d-none')
                        $('#TblCurricula').empty();
                        }

                        else {
                           swal("", data.ResponseMessage, "warning")

                    }
                }


            })
        }


        }

        function Fileupload(obj) {
        debugger;
        var filename = $(obj)[0].files[0].name;
        var fileId = $(obj).attr("id");
        var ext = obj.value.match(/\.(.+)$/)[1];

        switch (ext) {
            case 'pdf':
            case 'jpg':
            case 'jpeg':
                var fileSize = ($("#" + fileId)[0].files[0].size / 1024 / 1024);
                if (fileSize > 2) {
                    swal("", "File size should not exceed 2 MB.\r\nफाइल का साइज़ 2 MB से अधिक नहीं होना चाहिए।", "warning");
                    return false;
                }
                else {
                    var data = new FormData();
                    var files = $("#" + fileId).get(0).files;
                    if (files.length > 0) {
                        data.append("File", files[0]);
                    }
                    $("#divLoader").show();
                    $.ajax({
                        url: '@Url.Action("UploadCurriculFile", "Applicant")',
                        type: "POST",
                        processData: false,
                        contentType: false,
                        data: data,
                        success: function (response) {
                            $("#divLoader").hide();

                            if (response != null) {
                                if (response.result) {
                                    $("#fileName" + fileId).text(filename);
                                    $("#" + fileId + "Path").val(response.fpath);
                                    var Url = response.fpath.replace('~/', '');
                                    $("#" + fileId + "Anchor").empty();
                                    $("#" + fileId + "Anchor").attr('href', Url);
                                    //$("#" + fileId + "Anchor").show();
                                    $("#" + fileId + "Anchor").append('<a href="' + '@Url.Content("~/")' + Url + '" target="_blank" class="btn btn-warning anchor"><i class="fa fa-download"></i></a>');
                                    swal("", "File upload successfully. ", "success")
                                }
                                else {
                                    swal("", response.mesg, "error")
                                }
                            }
                            else {
                                swal("", "Fail to Upload File", "error")
                            }
                            return false;

                        },
                        error: function (e) {

                            $("#divLoader").hide();
                            swal("", "An Error Occured while uploading file", "error");
                        }
                    });

                }
                break;
            default:
                swal("", 'File should be in PDF/JPG/JPEG format./फाइल PDF/JPG/JPEG प्रारूप में होनी चाहिए।', "warning");
                this.value = '';
                return false;
        }

    }
    </script>

