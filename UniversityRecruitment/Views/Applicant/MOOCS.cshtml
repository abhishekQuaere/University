@model UniversityRecruitment.Models.Moocs
@{
    ViewBag.Title = "MOOCS";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
}

<style>
    .mysheader {
        background: #096499;
    }
</style>

<div class="row page-titles">
    <div class="col-md-12 align-self-center">
        <h3 class="text-themecolor">
            Category 3: Creation of ICT mediated Teaching Learning pedagogy and content and development of new and innovative courses and curricula
        </h3>
        <p>3 (c) MOOCs: Massive Open Online Courses</p>
    </div>
    <div class="col-md-7 align-self-center">

    </div>
    <div class="">
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
    </div>
</div>

<div class="container-fluid">




    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header mysheader">
                    <h4 class="m-b-0 text-white">
                        3 (C) MOOCS
                    </h4>
                </div>
                <div class="card-body">

                    <div class="row">

                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">
                                    Level of contribution in MOOCs
                                </label>
                                <div class="col-sm-12">

                                    @Html.DropDownListFor(Model => Model.LevelofMoocs, new List<SelectListItem>
                                               {
                                                   new SelectListItem{ Text="Development of Complete MOOCs in 4 quadrants", Value = "Development of Complete MOOCs in 4 quadrants" },
                                                     new SelectListItem{ Text="MOOCs Module / Lecture (devleoped in 4 quadrant)", Value = "MOOCs Module / Lecture (devleoped in 4 quadrant)" },
                                                     new SelectListItem{ Text="Content Writer / Subject Matter Expert of MOOCs", Value = "Content Writer / Subject Matter Expert of MOOCs" },
                                                     new SelectListItem{ Text="Course Coordinator for MOOCs", Value = "Course Coordinator for MOOCs" },
                                               }, "--Select--", new { @class = "form-control", @autocomplete = "off", })
                                    @*<select name="" id="" class="form-control">
                        <option selected="selected" value="-1">-- select --</option>
                        <option value="Development of Complete MOOCs in 4 quadrants">Development of Complete MOOCs in 4 quadrants</option>
                        <option value="MOOCs Module / Lecture (devleoped in 4 quadrant)">MOOCs Module / Lecture (devleoped in 4 quadrant)</option>
                        <option value="Content Writer / Subject Matter Expert of MOOCs">Content Writer / Subject Matter Expert of MOOCs</option>
                        <option value="Course Coordinator for MOOCs">Course Coordinator for MOOCs</option>

                    </select>*@
                                    @*<span id="" class="validator" style="display:none;">select an item</span>*@
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="body_txtDescription" id="body_lblDescription" class="col-sm-12">Short Description / Contribution</label>
                                <div class="col-sm-12">
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @Id = "Description", @name = "Description" })
                                    <span id="body_reqDescription" class="validator" style="display:none;">enter value</span>
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">
                                    No. of Credit Course
                                </label>
                                <div class="col-sm-12">
                                    @Html.DropDownListFor(Model => Model.NoOfCredit, new List<SelectListItem>
                                               {
                                                   new SelectListItem{ Text="1", Value = "1" },
                                                     new SelectListItem{ Text="2", Value = "2" },
                                                     new SelectListItem{ Text="3", Value = "3" },
                                                     new SelectListItem{ Text="4", Value = "4" },
                                               }, "--Select--", new { @class = "form-control", @autocomplete = "off", })
                                    @*<select name="" id="" class="form-control">
                        <option value="-1">-- select --</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>

                    </select>*@
                                    @*<span id="" class="validator" style="display:none;">select an item</span>*@
                                </div>
                            </div>
                        </div>

                       

 
                    </div>

                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">
                                    No. of Module / Lecture
                                </label>
                                <div class="col-sm-12">
                                    @Html.DropDownListFor(Model => Model.NoOfModule, new List<SelectListItem>
                                               {
                                                   new SelectListItem{ Text="1", Value = "1" },
                                                     new SelectListItem{ Text="2", Value = "2" },
                                                     new SelectListItem{ Text="3", Value = "3" },
                                                     new SelectListItem{ Text="4", Value = "4" },
                                               }, "--Select--", new { @class = "form-control", @autocomplete = "off", })

                                </div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Upload Scanned Attachment</label>
                                <div class="col-sm-12">
                                    <input type="file" class="form-control" id="UploadMoocs" onchange="Fileupload(this)">
                                    <span id="UploadMoocsAnchor" style="display: none;" class="input-group-text btn-download"></span>
                                    @*<span id="body_reqBookUpload" class="validator" style="display:none;">upload file</span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">&nbsp;</label>
                                <div class="col-sm-12">
                                    <a id="body_btnBookAdd" class="btn btn-primary btn-shadow" href="#" onclick="AddMoocs()"><span class="fa fa-plus-circle"></span> Add</a>
                                </div>
                            </div>
                        </div>
                    </div>








                    <div class="row mt-3">
                        <div class="col-sm-12">

                            <div class="table-responsive">
                                <table class="table full-color-table full-info-table hover-table" id="tab">
                                    <thead>
                                        <tr class="">
                                            <th>MOOCs</th>
                                            <th>Short Description / Contribution</th>
                                            <th>No. of Credit Course</th>
                                            <th>No. of Module / Lecture</th>
                                            @*<th>API Score</th>*@
                                            <th>Attachment</th>



                                        </tr>
                                    </thead>
                                    <tbody id="TblMoocs"></tbody>
                                    
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="card-shadow-primary col-sm-12 card bg-secondary">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <a id="" class="btn btn-warning text-dark shadow" href="#" onclick="Savedata()"><span class="fa fa-save"></span> Save</a>
                        <a id="body_BtnSaveNext" class="btn btn-success text-dark shadow pull-right d-none" href="#"><span class="fa fa-save"></span> Save &amp; Next <span class="fa fa-chevron-circle-right"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>


    function AddMoocs() {
        debugger;
        var LevelofMoocs = $('#LevelofMoocs').val();
        var Description = $('#Description').val();
        var NoOfCredit = $('#NoOfCredit').val();
        var NoOfModule = $('#NoOfModule').val();

        var href = $('.anchor').attr('href');
         if ($('#LevelofMoocs').val() == "" || $('#LevelofMoocs').val() == null || $('#LevelofMoocs').val() == undefined) {
                swal("", "please select Level of Moocs", "warning")
                return false;
            }
            if ($('#Description').val() == "" || $('#Description').val() == null || $('#Description').val() == undefined) {
                swal("", "Please enter   Description  ", "warning")
                return false;
            }

          if ($('#NoOfCredit').val() == "" || $('#NoOfCredit').val() == null || $('#NoOfCredit').val() == undefined) {
                swal("", "please select  Name Of No Of Credit Course ", "warning")
                return false;
         }
          if ($('#NoOfModule').val() == "" || $('#NoOfModule').val() == null || $('#NoOfModule').val() == undefined) {
                swal("", "please select  No Of Module ", "warning")
                return false;
         }
         if ($('#UploadMoocs').val() == "" || $('#UploadMoocs').val() == null || $('#UploadMoocs').val() == undefined) {
                swal("", "please Upload   Image ", "warning")
                return false;
            }


        var row = '<tr><td class="LevelMoocs">' + LevelofMoocs + '</td><td class="Descrip">' + Description + '</td><td class="NoCredit" >' + NoOfCredit + '</td><td  class="NoModule">' + NoOfModule + '</td><td><span class="input-group-text btn-download" href=' + href +'><a href=' + href +' target="_blank" class="btn btn-warning dldbtn"><i class="fa fa-download"></i></a></span></td></tr>';

         $('#TblMoocs').append(row);
         $('#NoOfModule').val('');
        $('#NoOfCredit').val('');
        $('#LevelofMoocs').val('');
        $('#UploadMoocs').val('');
        $('#Description').val('');
         
    }


    function Savedata() {
         debugger;

        var model = {
            MoocsList: [],


        }

        var entrylist = [];

        $('#tab #TblMoocs tr').each(function (i, d) {
            var MoocsEntry = {};
            MoocsEntry.LevelofMoocs = $(this).find('.LevelMoocs').text();
            MoocsEntry.Description = $(this).find('.Descrip').text();
            MoocsEntry.NoOfCredit = $(this).find('.NoCredit').text();
            MoocsEntry.NoOfModule = $(this).find('.NoModule').text();

            MoocsEntry.UploadMoocs = $(this).find('.dldbtn').attr('href');
            entrylist.push(MoocsEntry)

        });

         if (entrylist == 0) {
             swal("", "please fill all field", "warning")
             return false;
         }
         else {

         }

        if (entrylist != 0 ) {
            $.each(entrylist, function (key, value) {

                model.MoocsList.push(value);
            })

            $.ajax({
                type: 'post',
                url: '/Applicant/SaveMoocsDetails',
                data: JSON.stringify(model),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {

                        if (data.ResponseCode == 0) {
                            swal("", data.ResponseMessage, "success")

                            $('#body_BtnSaveNext').removeClass('d-none')
                        $('#TblMoocs').empty();
                        }

                        else {
                           swal("", data.ResponseMessage, "warning")

                    }
                }


            })
        }


        }

    function Fileupload(obj) {
        debugger;
        var filename = $(obj)[0].files[0].name;
        var fileId = $(obj).attr("id");
        var ext = obj.value.match(/\.(.+)$/)[1];

        switch (ext) {
            case 'pdf':
            case 'jpg':
            case 'jpeg':
                var fileSize = ($("#" + fileId)[0].files[0].size / 1024 / 1024);
                if (fileSize > 2) {
                    swal("", "File size should not exceed 2 MB.\r\nफाइल का साइज़ 2 MB से अधिक नहीं होना चाहिए।", "warning");
                    return false;
                }
                else {
                    var data = new FormData();
                    var files = $("#" + fileId).get(0).files;
                    if (files.length > 0) {
                        data.append("File", files[0]);
                    }
                    $("#divLoader").show();
                    $.ajax({
                        url: '@Url.Action("UploadMoocsFile", "Applicant")',
                        type: "POST",
                        processData: false,
                        contentType: false,
                        data: data,
                        success: function (response) {
                            $("#divLoader").hide();

                            if (response != null) {
                                if (response.result) {
                                    $("#fileName" + fileId).text(filename);
                                    $("#" + fileId + "Path").val(response.fpath);
                                    var Url = response.fpath.replace('~/', '');
                                    $("#" + fileId + "Anchor").empty();
                                    $("#" + fileId + "Anchor").attr('href', Url);
                                    //$("#" + fileId + "Anchor").show();
                                    $("#" + fileId + "Anchor").append('<a href="' + '@Url.Content("~/")' + Url + '" target="_blank" class="btn btn-warning anchor"><i class="fa fa-download"></i></a>');
                                    swal("", "File upload successfully. ", "success")
                                }
                                else {
                                    swal("", response.mesg, "error")
                                }
                            }
                            else {
                                swal("", "Fail to Upload File", "error")
                            }
                            return false;

                        },
                        error: function (e) {

                            $("#divLoader").hide();
                            swal("", "An Error Occured while uploading file", "error");
                        }
                    });

                }
                break;
            default:
                swal("", 'File should be in PDF/JPG/JPEG format./फाइल PDF/JPG/JPEG प्रारूप में होनी चाहिए।', "warning");
                this.value = '';
                return false;
        }

    }
    </script>

