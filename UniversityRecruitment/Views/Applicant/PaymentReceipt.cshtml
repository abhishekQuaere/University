@model UniversityRecruitment.Models.PersontalDetails
@{
    ViewBag.Title = "PaymentReceipt";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-7 align-self-center">
        <h3 class="text-themecolor">
            Payment Receipt
        </h3>
        <p>
            Print your payment receipt.
        </p>
    </div>
    <div class="col-md-5 align-self-center">

    </div>

</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div style="max-width:800px; margin:0px auto; text-align:right; padding:20px;">
                    <a href="#-"
                       style=" padding:8px 20px; margin-bottom:10px; border:1px solid #d8d8d8; font-family:Arial; text-decoration:none;">Print</a>
                </div>


                <table cellpadding="0" cellspacing="0" id="body_TblHeader"
                       style="border: solid 1px #000; font-family: Calibri; font-size: 14px; width: 800px; margin: auto;">
                    <tbody>
                        <tr>
                            <td colspan="4">
                                <table cellpadding="0" cellspacing="0" width="100%">
                                    <tbody>
                                        <tr>
                                            <td align="center" style="padding: 5px;" valign="top" width="125">
                                                <img src="~/Content/images/logo_mono_small.png" alt="" height="75">
                                            </td>
                                            <td style="font-family: Calibri; font-size: 14px; font-weight: bold; padding-bottom: 4px;"
                                                align="center" valign="middle">
                                                <span style="font-size: 18px;">Mahatma Gandhi Kashi Vidyapith, Varanasi</span>
                                                <br>
                                                (A State University of Uttar Pradesh)<br>
                                                Application Form
                                                Fee Payment Receipt
                                            </td>
                                            <td style="font-size: 12px; font-weight: bold;" align="center" valign="middle"
                                                width="125">
                                                &nbsp;
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td style="border-top: solid 1px #000; padding: 0;" colspan="4">
                                <table cellpadding="5" cellspacing="0" style="width: 100%;">
                                    <tbody>
                                        <tr>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">
                                                Applicant's
                                                Name
                                            </td>
                                            <td style="border-bottom: solid 1px #000;" colspan="5">
                                                <b>
                                                    @Model.FirstName
                                                </b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">
                                                Father's Name
                                            </td>
                                            <td style="border-bottom: solid 1px #000;" colspan="5">
                                                <b>
                                                    @Model.FatherName
                                                </b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">
                                                Mother's Name
                                            </td>
                                            <td style="border-bottom: solid 1px #000;" colspan="5">
                                                <b>
                                                    @Model.MotherName
                                                </b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">D.O.B.</td>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">
                                                <b>
                                                    @Model.Dob
                                                </b>
                                            </td>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">Gender</td>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">
                                                <b>
                                                    @Model.Gender
                                                </b>
                                            </td>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">Category</td>
                                            <td style="border-bottom: solid 1px #000;">
                                                <b>
                                                    @Model.Category
                                                </b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">Mobile</td>
                                            <td style="border-right: solid 0px #000; border-bottom: solid 1px #000;" colspan="5">
                                                <b>
                                                    @Model.Mobile
                                                </b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-right: solid 1px #000; border-bottom: solid 1px #000;">Email</td>
                                            <td style="border-right: solid 0px #000; border-bottom: solid 1px #000;" colspan="5">
                                                <b>
                                                    @Model.Email
                                                </b>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-right: solid 1px #000;">Permanent Address</td>
                                            <td colspan="5">
                                                <b>
                                                    @Model.PermanentAddress1
                                                </b>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td style="border-top: solid 1px #000; padding: 5; font-weight: bold; text-align: center;" colspan="4">
                                List of forms included in this payment
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 0; border-collapse: collapse;" colspan="4">

                                <table cellspacing="0" cellpadding="5" class="tbl" style="width: 100%; border-collapse: collapse;">
                                    <tbody>
                                        <tr>
                                            <th style="width: 50px;border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;border-top: 1px solid #000;">Serial</th>
                                            <th style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;border-top: 1px solid #000;">Form No.</th>
                                            <th style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;border-top: 1px solid #000;">Post</th>
                                            <th style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;border-top: 1px solid #000;">Subject / Dept.</th>
                                            <th style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;border-top: 1px solid #000;">Applying Category</th>
                                            <th style="border-bottom: solid 1px #000; border-right: solid 0px #000; padding: 5px;border-top: 1px solid #000;">Form Fee</th>
                                        </tr>

                                        @if (Model.appliedForm != null)
                                        {
                                            int sr = 1;
                                            if (Model.appliedForm.Count() > 0)
                                            {
                                                foreach (var itm in Model.appliedForm)
                                                {
                                                    <tr>
                                                        <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">@(sr++)</td>
                                                        <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">@itm.FormNo</td>
                                                        <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">@itm.PostType</td>
                                                        <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">@itm.PostName</td>
                                                        <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">@itm.ApplyingCategory</td>
                                                        <td style="border-bottom: solid 1px #000; border-right: solid 0px #000; padding: 5px;">Rs. @itm.FeeAmount/-</td>
                                                    </tr>
                                                }
                                            }
                                        }


                                    </tbody>
                                </table>

                            </td>
                        </tr>
                        <tr>
                            <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">
                                Total Amount
                                Paid:
                            </td>
                            <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">
                                <b>
                                    Rs. @Model.appliedForm.Sum(x => x.FeeAmount)/-
                                </b>
                            </td>
                            <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">
                                Payment Ref. No.
                            </td>
                            <td style="border-bottom: solid 1px #000; border-right: solid 0px #000; padding: 5px;">
                                <b>
                                    @Model.feeDetails.ReferenceNo
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">
                                Transaction ID
                            </td>
                            <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">
                                <b>
                                    @Model.feeDetails.TransactionId
                                </b>
                            </td>
                            <td style="border-bottom: solid 1px #000; border-right: solid 1px #000; padding: 5px;">
                                Transaction Date:
                            </td>
                            <td style="border-bottom: solid 1px #000; border-right: solid 0px #000; padding: 5px;">
                                <b>
                                    @Model.feeDetails.TransactionDate
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 5px;" colspan="4">
                                Note: This is an electronically generated receipt. This does not
                                require any signature
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br /><br />
            </div>
        </div>
    </div>
</div>

