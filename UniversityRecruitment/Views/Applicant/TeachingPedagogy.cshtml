
@{
    ViewBag.Title = "TeachingPedagogy";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
}

<style>
    .mysheader {
        background: #096499;
    }
</style>

<div class="row page-titles">
    <div class="col-md-12 align-self-center">
        <h3 class="text-themecolor">
            Category 3: Creation of ICT mediated Teaching Learning pedagogy and content and development of new and innovative courses and curricula
        </h3>
        <p>3. (a) Development of Innovative Pedagogy</p>
    </div>
    <div class="col-md-7 align-self-center">

    </div>
    <div class="">
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
    </div>
</div>

<div class="container-fluid">




    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header mysheader">
                    <h4 class="m-b-0 text-white">
                        3. (A) DEVELOPMENT OF INNOVATIVE PEDAGOGY
                    </h4>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Title of Development of Innovative Pedagogy</label>
                                <div class="col-sm-12">
                                    <input name="" type="text" id="tTitle" class="form-control">
                                    @*<span id="body_reqBookTitle" class="validator" style="display:none;">enter value</span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Short Description / Contribution</label>
                                <div class="col-sm-12">
                                    <input name="" type="text" id="description" class="form-control">
                                    @*<span id="" class="validator" style="display:none;">enter value</span>*@
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Type of Pedagogy</label>
                                <div class="col-sm-12">
                                    <input name="" type="text" id="Pedagogy" class="form-control">
                                    @*<span id="" class="validator" style="display:none;">enter value</span>*@
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Level</label>
                                <div class="col-sm-12">
                                    <select name="" id="level" class="form-control">
                                        <option value="-1">-- select --</option>
                                        <option value="National">UG</option>
                                        <option value="International">PG</option>

                                    </select>
                                    @*<span id="" class="validator" style="display:none;">select an item</span>*@
                                </div>
                            </div>
                        </div>


                    </div>

                    <div class="row">



                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">CEC Approval (if any)</label>
                                <div class="col-sm-12">
                                    <input name="" type="text" id="cECApproval" class="form-control">
                                    @*<span id="body_reqNoOfCoAuthor" class="validator" style="display:none;">enter value</span>*@
                                </div>
                            </div>
                        </div>



                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">Upload Scanned Attachment</label>
                                <div class="col-sm-12">
                                    <input type="file" name="" id="attachment" class="form-control" onchange="Fileuploads(this)">
                                    <span id="attachmentAnchor" hidden></span>
                                    @*<span id="body_reqBookUpload" class="validator" style="display:none;">upload file</span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">&nbsp;</label>
                                <div class="col-sm-12">
                                    <a id="body_btnBookAdd" class="btn btn-primary btn-shadow" href="#" onclick="add()"><span class="fa fa-plus-circle"></span> Add</a>
                                </div>
                            </div>
                        </div>
                    </div>








                    <div class="row mt-3">
                        <div class="col-sm-12">

                            <div class="table-responsive" id="tab">
                                <table class="table full-color-table full-info-table hover-table">
                                    <thead>
                                        <tr class="">
                                            <th>Title of Development of Innovative Pedagogy</th>
                                            <th>Short Description / Contribution</th>
                                            <th>Type</th>
                                            <th>Level</th>
                                            <th>CEC Approval (if any)</th>
                                            @*<th>API Score</th>*@
                                            <th>Attachment</th>


                                        </tr>
                                    </thead>
                                    <tbody id="tbody"></tbody>

                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="card-shadow-primary col-sm-12 card bg-secondary">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <a id="" class="btn btn-warning text-dark shadow" href="#" onclick="finalSubmit()"><span class="fa fa-save"></span> Save</a>
                        <button id="btnsubmit" class="btn btn-success text-dark shadow pull-right d-none" ><span class="fa fa-save"></span> Save &amp; Next <span class="fa fa-chevron-circle-right"></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    function add() {
        debugger;
           var tTitle = $('#tTitle').val();
           var description = $('#description').val();
        var Pedagogy = $('#Pedagogy').val();
        var level = $('#level').val();
        var cECApproval = $('#cECApproval').val();
        var attachment = $('#attachment').val();
          var href = $('.anchor').attr('href');
        var level1 = $("#level option:selected").text();

        var href = $('.anchor').attr('href');
        if ($('#tTitle').val() == "" || $('#tTitle').val() == null || $('#tTitle').val() == undefined) {
                swal("", "please enter Title of Development of Innovative Pedagogy", "info")
                return false;
            }if ($('#description').val() == "" || $('#description').val() == null || $('#description').val() == undefined) {
                swal("", "please enter Book title with page nos.", "info")
                return false;
            }
            if ($('#Pedagogy').val() == "" || $('#Pedagogy').val() == null || $('#Pedagogy').val() == undefined) {
                swal("", "Please enter Type of Pedagogy  ", "info")
                return false;
            }
            if ($('#level').val() == "-1"|| $('#level').val() == "" || $('#level').val() == null || $('#level').val() == undefined) {
                swal("", "please select Level", "info")
                return false;
            }
            if ($('#cECApproval').val() == "" || $('#cECApproval').val() == null || $('#cECApproval').val() == undefined) {
                swal("", "please  enter CEC Approval (if any)", "info")
                return false;
            }
            if ($('#attachment').val() == "" || $('#attachment').val() == null || $('#attachment').val() == undefined) {
                swal("", "please upload Upload Scanned Attachment. ", "info")
                return false;
         }


            var row = "<tr><td class='tTitle'>"+tTitle+"</td><td class='description'>" + description + "</td><td class='Pedagogy'>" + Pedagogy + "</td><td class=''>" + level1 + "</td><td class='level' hidden>" + level + "</td><td class='cECApproval'>" + cECApproval + "</td><td class='lattachment'><span class='input-group-text btn-download' href=" + href + "><a href=" + href + " target='_blank' class='btn btn-warning dnldbtn'><i class='fa fa-download'></i></a></span></td></tr>";

            $('#tbody').append(row);
     $('#tTitle').val('');
        $('#description').val('');
        $('#Pedagogy').val('');
        $('#level').val(-1);
        $('#cECApproval').val('');
        $('#attachment').val('');
       
        }


    function finalSubmit() {

        debugger;
        var model = {
            lst: []

        }

        var detailslist = [];


        $(' #tab #tbody tr ').each(function (i, d) {
            var details = {};
            details.tTitle = $(this).find('.tTitle').text();
            details.description = $(this).find('.description').text();
            details.Pedagogy = $(this).find('.Pedagogy').text()
            details.level = $(this).find('.level').text()
            details.cECApproval = $(this).find('.cECApproval').text()
      
         

            details.attachment = $(this).find('.dnldbtn').attr('href');
            detailslist.push(details)
        })
        if (detailslist==0) {
            swal("", "please fill all field", "warning")
            return false;
        }
        if (detailslist != 0) {
            $.each(detailslist, function (key, value) {
                model.lst.push(value);
            })
        }

        $.ajax({
            type: 'post',
            url: '/Applicant/TeachingPedagogy',
            data: JSON.stringify(model),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data.ResponseCode == 0) {
                    swal("", data.ResponseMessage, "success");

                    $('#btnsubmit').removeClass('d-none')
                    $('#tbody').empty()
                  
                }
                else {
                    swal("", "failure", "warning");
                }
            }


        })
    }

        function Fileuploads(obj) {
        debugger;
        var filename = $(obj)[0].files[0].name;
        var fileId = $(obj).attr("id");
          var ext = obj.value.match(/\.(.+)$/)[1];


        switch (ext) {
            case 'pdf':
            case 'jpg':
            case 'jpeg':
                var fileSize = ($("#" + fileId)[0].files[0].size / 1024 / 1024);
                if (fileSize > 2) {
                    swal("", "File size should not exceed 2 MB.\r\nफाइल का साइज़ 2 MB से अधिक नहीं होना चाहिए।", "warning");
                    return false;
                }
                else {
                    var data = new FormData();
                    var files = $("#" + fileId).get(0).files;
                    if (files.length > 0) {
                        data.append("File", files[0]);

                    }
                    $("#divLoader").show();
                    $.ajax({
                        url: '@Url.Action("UploadFileTeachingPedagogy", "Applicant")',
                        type: "POST",
                        processData: false,
                        contentType: false,
                        data: data,
                        success: function (response) {
                            $("#divLoader").hide();

                            if (response != null) {
                                if (response.result) {
                                    $("#fileName" + fileId).text(filename);
                                    $("#" + fileId + "Path").val(response.fpath);
                                    var Url = response.fpath.replace('~/', '');
                                    $("#" + fileId + "Anchor").empty();
                                    $("#" + fileId + "Anchor").attr('href', Url);
                                    //$("#" + fileId + "Anchor").show();
                                    $("#" + fileId + "Anchor").append('<a href="' + '@Url.Content("~/")' + Url + '" target="_blank" class="btn btn-warning anchor"><i class="fa fa-download"></i></a>');
                                    swal("", "File upload successfully. ", "success")
                                }
                                else {
                                    swal("", response.mesg, "error")
                                }
                            }
                            else {
                                swal("", "Fail to Upload File", "error")
                            }
                            return false;

                        },
                        error: function (e) {

                            $("#divLoader").hide();
                            swal("", "An Error Occured while uploading file", "error");
                        }
                    });

                }
                break;
            default:
                swal("", 'File should be in PDF/JPG/JPEG format./फाइल PDF/JPG/JPEG प्रारूप में होनी चाहिए।', "warning");
                this.value = '';
                return false;
        }

        }
  
</script>