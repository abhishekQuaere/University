                        {
                            <span class='input-group-text btn-download' href="@Model.acceptance.NocDocumentPath.Replace("~","")"><a href="@Model.acceptance.NocDocumentPath.Replace("~","")" target='_blank' class='btn btn-warning dnldbtn'><i class='fa fa-download'></i></a></span>
