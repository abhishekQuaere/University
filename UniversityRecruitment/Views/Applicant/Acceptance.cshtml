                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">Phone(Landline)</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" id="landline">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">Fax</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" id="fax">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">&nbsp;</label>
                                <div class="col-sm-12">
                                    <a class="btn btn-alternate shadow" href="#" id="addMore">Add Referee</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="table-primary">
                                            <th>Name</th>
                                            <th>Address</th>
                                            <th>
                                                Email<br>
                                                Mobile
                                            </th>
                                            <th>
                                                Phone(landline)<br>
                                                Fax
                                            </th>
                                        </tr>

                                    </thead>
                                    <tbody id="addMoreData">
                                        @if (Model != null)
                                        {
                                            if (Model.referee.Count() > 0)
                                            {
                                                foreach (var itm in Model.referee)
                                                {

                                                    <tr>
                                                        <td>@itm.refereeName</td>
                                                        <td>@itm.address</td>
                                                        <td>@itm.emailId / @itm.Mobile</td>
                                                        <td>@itm.landline / @itm.Fax</td>
                                                    </tr>

                                                }
                                            }
                                            else
                                            {

                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

