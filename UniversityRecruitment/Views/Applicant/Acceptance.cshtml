@model UniversityRecruitment.Models.Referee
@{
    ViewBag.Title = "Acceptance";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
}

<style>
    .mysheader {
        background-color: #096499;
    }

    .form-group label {
        font-size: 14px;
        color: #000000;
        width: 100%;
    }
</style>
<div class="row page-titles">
    <div class="col-md-7 align-self-center">
        <h3 class="text-themecolor">
            Acceptance
        </h3>
        <p>Give details of any other credential significant contributions, award received etc. not mentioned earlier.</p>
    </div>
    <div class="col-md-5 align-self-center">

    </div>

</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header mysheader">
                    <h4 class="m-b-0 text-white">
                        Acceptance
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <b>Give names designations, and addresses (Mobile, Phone/Fax No./ Email, if any) of two references not related to candidate. Reference should be of persons with or under whom candidate has worked, or who have intimate knowledge of his work.</b>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="col-sm-12">Name of the Referee</label>
                                <div class="col-sm-12">
                                    <input name=" " type="text" class="form-control" id="refereeName">
                                    @*<span id="body_reqRefereeName" class="validator" style="display:none;">enter value</span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label class="col-sm-12">Complete Postal Address</label>
                                <div class="col-sm-12">
                                    <input name=" " type="text" class="form-control" id="address">
                                    @*<span id="body_reqRefereeAddress" class="validator" style="display:none;">enter value</span>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="col-sm-12">Email ID</label>
