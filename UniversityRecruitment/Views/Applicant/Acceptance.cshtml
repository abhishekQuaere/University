<script>

    $(document).ready(function () {

        //$('#btnSaveNext').hide();

    });

    var ser = 1;
    $('#addMore').click(function () {
        debugger;
        var refereeName = $('#refereeName').val();
        var address = $("#address").val();
        var emailId = $("#emailId").val();
        var mobileNo = $("#mobileNo").val();
        var landline = $('#landline').val();
        var fax = $("#fax").val();

        if (refereeName != "" && refereeName != null && refereeName != undefined || address != "" && address != null && address != undefined || emailId != "" && emailId != null && emailId != undefined || mobileNo != "" && mobileNo != null && mobileNo != undefined || landline != "" && landline != null && landline != undefined || fax != "" && fax != null && fax != undefined) {

            var row = "<tr class='new'><td class='refereeName'>" + refereeName + "</td><td class='address'>" + address + "</td><td class='emailIdAndMobile'>" + emailId + "/" + mobileNo + "<input type='hidden' value=" + emailId + " class='emailId'/><input type='hidden' value=" + mobileNo + " class='mobileNo'/></td><td class='landlineAndFax'>" + landline + "/" + fax + "<input type='hidden' value=" + landline + " class='landline'/><input type='hidden' value=" + fax + " class='fax'/></td></tr>";

            $('#addMoreData').append(row);

            $('#refereeName').val('');
            $("#address").val('');
            $("#emailId").val('');
            $("#mobileNo").val('');
            $('#landline').val('');
            $("#fax").val('');

            //var $el = $('#attachment');
            //$el.wrap('<form>').closest('form').get(0).reset();
            //$el.unwrap();

        }
        else {
            $('#addMoreData').html('');
        }

    })

    function Fileupload(obj) {
        debugger;
        var filename = $(obj)[0].files[0].name;
        var fileId = $(obj).attr("id");
        var ext = obj.value.match(/\.(.+)$/)[1];

        switch (ext) {
            case 'pdf':
            case 'jpg':
            case 'jpeg':
                var fileSize = ($("#" + fileId)[0].files[0].size / 1024 / 1024);
                if (fileSize > 2) {
                    swal("", "File size should not exceed 2 MB.\r\nफाइल का साइज़ 2 MB से अधिक नहीं होना चाहिए।", "warning");
                    return false;
                }
                else {
                    var data = new FormData();
                    var files = $("#" + fileId).get(0).files;
                    if (files.length > 0) {
                        data.append("File", files[0]);
                    }
                    $("#divLoader").show();
                    $.ajax({
                        url: '@Url.Action("UploadFileAcceptance", "Applicant")',
                        type: "POST",
                        processData: false,
                        contentType: false,
                        data: data,
                        success: function (response) {
                            $("#divLoader").hide();

                            if (response != null) {
                                if (response.result) {
                                    $("#fileName" + fileId).text(filename);
                                    $("#" + fileId + "Path").val(response.fpath);
                                    var Url = response.fpath.replace('~/', '');
                                    $("#" + fileId + "Anchor").empty();
                                    $("#" + fileId + "Anchor").attr('href', Url);
                                    //$("#" + fileId + "Anchor").show();
                                    $("#" + fileId + "Anchor").append('<a href="' + '@Url.Content("~/")' + Url + '" target="_blank" class="btn btn-warning anchor"><i class="fa fa-download"></i></a>');
                                    swal("", "File upload successfully. ", "success")
                                }
                                else {
                                    swal("", response.mesg, "error")
                                }
                            }
                            else {
                                swal("", "Fail to Upload File", "error")
                            }
                            return false;

                        },
                        error: function (e) {

                            $("#divLoader").hide();
                            swal("", "An Error Occured while uploading file", "error");
                        }
                    });

                }
                break;
            default:
                swal("", 'File should be in PDF/JPG/JPEG format./फाइल PDF/JPG/JPEG प्रारूप में होनी चाहिए।', "warning");
                this.value = '';
                return false;
        }

    }

    function finalSubmit() {

        debugger;
        var IsPass = false;
        var model = {
            referee: []
        }
        var refereeList = [];

        $('.new').each(function (i, d) {

            var referee = {};

            referee.refereeName = $(this).find('.refereeName').text();
            referee.address = $(this).find('.address').text();
            referee.emailId = $(this).find(".emailId").val();
            referee.Mobile = $(this).find(".mobileNo").val();
            referee.landline = $(this).find(".landline").val();
            referee.Fax = $(this).find(".fax").val();
            /*referee.NocDocumentPath = $('.anchor').attr('href');*/


            model.Salary = $("#salaryGrade").val();
            model.SalaryDetail = $('#salaryGradeText').val();
            model.AcademicBreak = $('#break').val();
            model.AcademicBreakDetail = $('#breakText').val();
            model.Law = $('#punished').val();
            model.LawDetail = $('#punishedText').val();
            model.CaseFiled = $('#courtCase').val();
            model.CaseDetail = $('#CaseText').val();
            model.OtherInformation = $('#otherInfo').val();
            if ($('.anchor').attr('href') == "" || $('.anchor').attr('href') == null || $('.anchor').attr('href') == undefined && '@Model.acceptance.NocDocumentPath' != '') {
                model.NocDocumentPath = '@Model.acceptance.NocDocumentPath'
            }
            else {
                model.NocDocumentPath = $('.anchor').attr('href');
            }

            refereeList.push(referee);
            IsPass = true;

        });
        if (refereeList.length != 0) {
            if (IsPass != false) {
                $.each(refereeList, function (key, value) {
                    model.referee.push(value);
                });
                $.ajax({
                    url: "@Url.Action("saveAcceptance", "Applicant")",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(model),
                    async: false,
                    dataType: "json",
                    success: function (a) {
                        if (a.ResponseCode == 0) {
                            $.confirm({
                                title: '',
                                content: a.ResponseMessage,
                                buttons: {
                                    Ok: function () {
                                        //$('#addMoreData').html('');
                                        //$("#salaryGrade").val('-1');
                                        //$('#salaryGradeText').val('');
                                        //$('#break').val('-1');
                                        //$('#breakText').val('');
                                        //$('#punished').val('-1');
                                        //$('#punishedText').val('');
                                        //$('#courtCase').val('-1');
                                        //$('#CaseText').val('');
                                        //$('#otherInfo').val('');
                                        //$('.anchor').attr('');
                                        //var $el = $('#noc');
                                        //$el.wrap('<form>').closest('form').get(0).reset();
                                        //$el.unwrap();
                                        window.location.reload();
                                        //$('#btnSaveNext').show();
                                    }
                                }
                            });
                        }
                        else {
                            $.confirm({
                                title: '',
                                content: a.ResponseMessage,
                                buttons: {
                                    Ok: function () {

                                    }
                                }
                            });
                        }
                    },
                    error: function (e) {
                        $('.btnSubmit').prop('disabled', false);
                        swal("", "Somthing went wrong!", "warning");
                    }
                });
            }
            else {
                swal("", 'Something went wrong !', "warning");
            }
        }
        else {
            swal("", 'Add altleast one record .', "info");
        }
    }

    $(".only-numeric").bind("keypress", function (e) {
        var keyCode = e.which ? e.which : e.keyCode
        if (!(keyCode >= 48 && keyCode <= 57)) {
            //swal("", "Please enter numeric digit only", "warning");
            return false;
        }
        return true;
    });

</script>

