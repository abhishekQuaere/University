                                    }
                                    else if (Model.Law == false)
                                    {
                                        <select class="form-control" id="punished">
                                            <option value="-1">-- select --</option>
                                            <option value="true">Yes</option>
                                            <option value="false" selected>No</option>

                                        </select>
                                    }
                                    else
                                    {
                                        <select class="form-control" id="punished">
