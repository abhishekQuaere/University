@model UniversityRecruitment.Models.ResearchGuidance
@{
    ViewBag.Title = "ResearchGuidance";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
}

<style>
    .mysheader {
        background-color: #096499;
    }
</style>

<div class="row page-titles">
    <div class="col-md-7 align-self-center">
        <h3 class="text-themecolor">
            Research Guidance, Project and Consultancy
        </h3>
        <p>Research Guidance</p>
    </div>
    <div class="col-md-5 align-self-center">

    </div>

</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header mysheader">
                    <h4 class="m-b-0 text-white">
                        (A) RESEARCH GUIDANCE
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">Degree</label>
                                <div class="col-sm-12">
                                    <select id="degree" class="form-control">
                                        <option selected="selected" value="-1">-- select --</option>
                                        <option value="M. Phil.">M. Phil.</option>
                                        <option value="PG Dissertation">PG Dissertation</option>
                                        <option value="Ph. D.">Ph. D.</option>

                                    </select>
                                    @*<span id="body_reqDegree" class="validator" style="display:none;">select an item</span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">Subject / Course</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control" id="subAndCou">
                                    @*<span id="body_reqSubject" class="validator" style="display:none;">enter value</span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">No. of Students</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control only-numeric" id="noOfStudents">
                                    @*<span id="body_reqNoOfStudents" class="validator" style="display:none;">enter value</span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">Thesis Submitted</label>
                                <div class="col-sm-12">
                                    <select class="form-control" id="thesis">
                                        <option selected="selected" value="-1">-- select --</option>
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>

                                    </select>
                                    @*<span id="body_reqThesisSubmitted" class="validator" style="display:none;">select an item</span>*@
                                </div>
                            </div>
                        </div>

                        <div id="body_divDegreeAwarded" class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">Degree Awarded</label>
                                <div class="col-sm-12">
                                    <select class="form-control" id="awarded">
                                        <option selected="selected" value="-1">-- select --</option>
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>

                                    </select>
                                    @*<span id="body_reqDegreeAwarded" class="validator" style="display:none;">select an item</span>*@
                                </div>
                            </div>
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="col-sm-12">Upload Scanned Attachment</label>
                                <div class="col-sm-12">
                                    <input type="file" class="form-control" id="attachment" onchange="Fileupload(this)">
                                    <span id="attachmentAnchor" style="display: none;" class="input-group-text btn-download"></span>
                                </div>
                                <span class="smallpdf">(File Format:JPG/JPEG and PDF । Max File Size: 2 MB)</span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-sm-12">&nbsp;</label>
                                <div class="col-sm-12">
                                    <a class="btn btn-primary btn-shadow" href="#" id="addMore"><span class="fa fa-plus-circle"></span> Add</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="table-primary">
                                            <th>Serial</th>
                                            <th>Degree</th>
                                            <th>Subject / Course</th>
                                            <th>No. of Students</th>
                                            <th>Thesis Submitted</th>
                                            <th>Degree Awarded</th>
                                            @*<th>API Score</th>*@
                                            <th>Attachment</th>
                                            <th></th>
                                        </tr>

                                    </thead>
                                    <tbody id="addMoreData">
                                        @if (Model != null)
                                        {
                                            if (Model.researchGuidances.Count() > 0)
                                            {
                                                int sr = 1;
                                                foreach (var itm in Model.researchGuidances)
                                                {

                                                    <tr>
                                                        <td class="snr">@(sr++)</td>
                                                        <td>@itm.Degree</td>
                                                        <td>@itm.Subject</td>
                                                        <td>@itm.NoOfStudents</td>
                                                        <td>@itm.ThesisSubmitted</td>
                                                        <td>@itm.DegreeAwarded</td>
                                                        <td><span class='input-group-text btn-download' href="@itm.DocumentPath.Replace("~","")"><a href="@itm.DocumentPath.Replace("~","")" target='_blank' class='btn btn-warning dnldbtn'><i class='fa fa-download'></i></a></span></td>
                                                    </tr>

                                                }
                                            }
                                            else
                                            {

                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="row">
        <div class="card-shadow-primary col-sm-12 card bg-secondary">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <button class="btn btn-warning text-dark shadow" onclick="finalSubmit()"><span class="fa fa-save"></span> Save</button>
                        <a id="btnSaveNext" class="btn btn-success text-dark shadow pull-right" href=""><span class="fa fa-save"></span> Save &amp; Next <span class="fa fa-chevron-circle-right"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        debugger;
        //$('#btnSaveNext').hide();

    });

    $('#degree').change(function () {
        debugger;
        var Deg = $('#degree').val();

        if (Deg == "PG Dissertation" || Deg == "M. Phil.") {

            var i = '<option value="N/A"><strong>N/A</strong></option>';
            $('#thesis').html('');
            $('#thesis').append(i);
            $('#thesis').val('N/A');
        }
        else {

            $('#thesis').html('<option selected="selected" value="-1">-- select --</option><option value="Yes">Yes</option><option value="No">No</option>');

        }

    })

    
    $('#addMore').click(function () {
        debugger;

        var snr = $('#addMoreData tr:last').find('.snr').text();
        var Degree = $('#degree').val();
        var DegreeText = $("#degree option:selected").text();
        var CourseAndSubject = $("#subAndCou").val();
        var NoOfStudents = $("#noOfStudents").val();
        var Thesis = $('#thesis').val();
        var ThesisText = $("#thesis option:selected").text();
        var Awarded = $('#awarded').val();
        var AwardedText = $("#awarded option:selected").text();
        var href = $('.anchor').attr('href');
        var ser = parseInt(snr++);

        if (Degree != "-1" && Degree != null && Degree != undefined || CourseAndSubject != "" && CourseAndSubject != null && CourseAndSubject != undefined || NoOfStudents != "" && NoOfStudents != null && NoOfStudents != undefined || Thesis != "-1" && Thesis != null && Thesis != undefined || Awarded != "-1" && Awarded != null && Awarded != undefined) {

            var row = "<tr class='new'><td class='snr'>" + snr + "</td><td class='DegreeText'>" + DegreeText + "</td><td class='CourseAndSubject'>" + CourseAndSubject + "</td><td class='NoOfStudents'>" + NoOfStudents + "</td><td class='ThesisText'>" + ThesisText + "</td><td class='AwardedText'>" + AwardedText + "</td><td><span class='input-group-text btn-download' href=" + href + "><a href=" + href + " target='_blank' class='btn btn-warning dnldbtn'><i class='fa fa-download'></i></a></span></td></tr>";

            $('#addMoreData').append(row);

            $('#degree').val('-1');
            $("#subAndCou").val('');
            $("#noOfStudents").val('');
            $('#thesis').html('<option selected="selected" value="-1">-- select --</option><option value="Yes">Yes</option><option value="No">No</option>');
            $('#awarded').val('-1');

            var $el = $('#attachment');
            $el.wrap('<form>').closest('form').get(0).reset();
            $el.unwrap();

        }
        else {
            $('#addMoreData').html('');
        }

    })

    function Fileupload(obj) {
        debugger;
        var filename = $(obj)[0].files[0].name;
        var fileId = $(obj).attr("id");
        var ext = obj.value.match(/\.(.+)$/)[1];

        switch (ext) {
            case 'pdf':
            case 'jpg':
            case 'jpeg':
                var fileSize = ($("#" + fileId)[0].files[0].size / 1024 / 1024);
                if (fileSize > 2) {
                    swal("", "File size should not exceed 2 MB.\r\nफाइल का साइज़ 2 MB से अधिक नहीं होना चाहिए।", "warning");
                    return false;
                }
                else {
                    var data = new FormData();
                    var files = $("#" + fileId).get(0).files;
                    if (files.length > 0) {
                        data.append("File", files[0]);
                    }
                    $("#divLoader").show();
                    $.ajax({
                        url: '@Url.Action("UploadFile", "Applicant")',
                        type: "POST",
                        processData: false,
                        contentType: false,
                        data: data,
                        success: function (response) {
                            $("#divLoader").hide();

                            if (response != null) {
                                if (response.result) {
                                    $("#fileName" + fileId).text(filename);
                                    $("#" + fileId + "Path").val(response.fpath);
                                    var Url = response.fpath.replace('~/', '');
                                    $("#" + fileId + "Anchor").empty();
                                    $("#" + fileId + "Anchor").attr('href', Url);
                                    //$("#" + fileId + "Anchor").show();
                                    $("#" + fileId + "Anchor").append('<a href="' + '@Url.Content("~/")' + Url + '" target="_blank" class="btn btn-warning anchor"><i class="fa fa-download"></i></a>');
                                    swal("", "File upload successfully. ", "success")
                                }
                                else {
                                    swal("", response.mesg, "error")
                                }
                            }
                            else {
                                swal("", "Fail to Upload File", "error")
                            }
                            return false;

                        },
                        error: function (e) {

                            $("#divLoader").hide();
                            swal("", "An Error Occured while uploading file", "error");
                        }
                    });

                }
                break;
            default:
                swal("", 'File should be in PDF/JPG/JPEG format./फाइल PDF/JPG/JPEG प्रारूप में होनी चाहिए।', "warning");
                this.value = '';
                return false;
        }

    }

    function finalSubmit() {

        debugger;
        var IsPass = false;
        var model = {
            researchGuidances: []
        }
        var researchGuidancesList = [];

        $('.new').each(function (i, d) {

            var researchGuidances = {};
            researchGuidances.Degree = $(this).find('.DegreeText').text();
            researchGuidances.Subject = $(this).find('.CourseAndSubject').text();
            researchGuidances.NoOfStudents = $(this).find(".NoOfStudents").text();
            researchGuidances.ThesisSubmitted = $(this).find(".ThesisText").text();
            researchGuidances.DegreeAwarded = $(this).find(".AwardedText").text();
            researchGuidances.DocumentPath = $(this).find('.dnldbtn').attr('href');

            researchGuidancesList.push(researchGuidances);
            IsPass = true;

        });
        if (researchGuidancesList.length != 0) {
            if (IsPass != false) {
                $.each(researchGuidancesList, function (key, value) {
                    model.researchGuidances.push(value);
                });
                $.ajax({
                    url: "@Url.Action("SaveResearchGuidances", "Applicant")",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(model),
                    async: false,
                    dataType: "json",
                    success: function (a) {
                        if (a.ResponseCode == 0) {
                            $.confirm({
                                title: '',
                                content: a.ResponseMessage,
                                buttons: {
                                    Ok: function () {
                                        //$('#addMoreData').html('');
                                        //$('#btnSaveNext').show();
                                        window.location.reload();
                                    }
                                }
                            });
                        }
                        else {
                            $.confirm({
                                title: '',
                                content: a.ResponseMessage,
                                buttons: {
                                    Ok: function () {

                                    }
                                }
                            });
                        }
                    },
                    error: function (e) {
                        $('.btnSubmit').prop('disabled', false);
                        swal("", "Somthing went wrong!", "warning");
                    }
                });
            }
            else {
                swal("", 'Something went wrong !', "warning");
            }
        }
        else {
            swal("", 'Add altleast one record .', "info");
        }
    }

    $(".only-numeric").bind("keypress", function (e) {
        var keyCode = e.which ? e.which : e.keyCode
        if (!(keyCode >= 48 && keyCode <= 57)) {
            //swal("", "Please enter numeric digit only", "warning");
            return false;
        }
        return true;
    });

</script>