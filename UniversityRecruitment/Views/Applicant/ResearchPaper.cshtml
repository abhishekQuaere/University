                            <div class="form-group">
                                <label for="body_txtUgcSerialNo" id="" class="col-sm-12">UGC S. No. (If Available)</label>
                                <div class="col-sm-12">
                                    <input name="" type="text" id="uGCSN" class="form-control">

                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label id="" class="col-sm-12">Upload Scanned Attachment</label>
                                <div class="col-sm-12">
                                    <input type="file" name="" id="Attachment" class="form-control" onchange="Fileuploads(this)">
                                    <span id="AttachmentAnchor" hidden></span>
                                    @*<span id="" class="validator" style="display:none;">upload file</span>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="" id="" class="col-sm-12">&nbsp;</label>
                                <div class="col-sm-12">
                                    <a id="body_btnResearchAdd" class="btn btn-primary btn-shadow" href="#" onclick="add()"><span class="fa fa-plus-circle"></span> Add</a>
                                </div>
                            </div>
