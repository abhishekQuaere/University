                                    @*@if (ViewBag.ActivitiesList != null)
                                        {
                                            @Html.DropDownListFor(Model => Model.ActivityId, new SelectList(ViewBag.ActivitiesList, "Value", "Text"), "--SELECT--", new { @class = "form-control", @id = "ActivityId", @placeholder = "Select" })
                                        }*@
