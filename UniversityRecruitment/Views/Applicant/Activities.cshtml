</div>
<script>
    var Sno = 1;
     function AddActivity() {
        debugger;
        var Activity = $('#Activity').val();
        var Description = $('#Description').val();
        var Institution = $('#Institution').val();
        var AcademicYear = $('#AcademicYear').val();

        var href = $('.anchor').attr('href');
         if ($('#Activity').val() == "" || $('#Activity').val() == null || $('#Activity').val() == undefined) {
                swal("", "please Enter Activity", "warning")
                return false;
            }
            if ($('#Description').val() == "" || $('#Description').val() == null || $('#Description').val() == undefined) {
                swal("", "Please enter   Description  ", "warning")
                return false;
            }

          if ($('#Institution').val() == "" || $('#Institution').val() == null || $('#Institution').val() == undefined) {
                swal("", "please enter  Name Of Institution ", "warning")
                return false;
         }
          if ($('#AcademicYear').val() == "" || $('#AcademicYear').val() == null || $('#AcademicYear').val() == undefined) {
                swal("", "please enter  Academic Year ", "warning")
                return false;
         }
         if ($('#UploadActivity').val() == "" || $('#UploadActivity').val() == null || $('#UploadActivity').val() == undefined) {
                swal("", "please Upload   Image ", "warning")
                return false;
            }


        var row = '<tr><td>'+ Sno++ +'</td><td class="Actv">' + Activity + '</td><td class="Descrip">' + Description + '</td><td class="Insti" >' + Institution + '</td><td  class="AcadYear">' + AcademicYear + '</td><td><span class="input-group-text btn-download" href=' + href +'><a href=' + href +' target="_blank" class="btn btn-warning dldbtn"><i class="fa fa-download"></i></a></span></td></tr>';

         $('#TblActivity').append(row);
         $('#Activity').val('');
        $('#Description').val('');
        $('#Institution').val('');
        $('#AcademicYear').val('');
        $('#UploadActivity').val('');



    }

     function Savedata() {
         debugger;

        var model = {
            AList: [],


        }

        var entrylist = [];

        $('#tab #TblActivity tr').each(function (i, d) {
            var ActivityEntry = {};
            ActivityEntry.Activity = $(this).find('.Actv').text();
            ActivityEntry.Description = $(this).find('.Descrip').text();
            ActivityEntry.Institution = $(this).find('.Insti').text();
            ActivityEntry.AcademicYear = $(this).find('.AcadYear').text();

            ActivityEntry.UploadActivity = $(this).find('.dldbtn').attr('href');
            entrylist.push(ActivityEntry)

        });

         if (entrylist == 0) {
             swal("", "please fill all field", "warning")
             return false;
         }
         else {

         }

        if (entrylist != 0 ) {
            $.each(entrylist, function (key, value) {

                model.AList.push(value);
            })

            $.ajax({
                type: 'post',
                url: '/Applicant/SaveActivityDetails',
                data: JSON.stringify(model),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {

                        if (data.ResponseCode == 0) {
                            swal("", data.ResponseMessage, "success")

                            $('#body_BtnSaveNext').removeClass('d-none')
                        $('#TblActivity').empty();
                        }

                        else {
                           swal("", data.ResponseMessage, "warning")

                    }
                }


            })
        }


        }


     function Fileupload(obj) {
        debugger;
        var filename = $(obj)[0].files[0].name;
        var fileId = $(obj).attr("id");
        var ext = obj.value.match(/\.(.+)$/)[1];

        switch (ext) {
            case 'pdf':
            case 'jpg':
            case 'jpeg':
                var fileSize = ($("#" + fileId)[0].files[0].size / 1024 / 1024);
                if (fileSize > 2) {
                    swal("", "File size should not exceed 2 MB.\r\nफाइल का साइज़ 2 MB से अधिक नहीं होना चाहिए।", "warning");
                    return false;
                }
                else {
                    var data = new FormData();
                    var files = $("#" + fileId).get(0).files;
                    if (files.length > 0) {
                        data.append("File", files[0]);
                    }
                    $("#divLoader").show();
                    $.ajax({
                        url: '@Url.Action("UploadActivityFile", "Applicant")',
                        type: "POST",
                        processData: false,
                        contentType: false,
                        data: data,
                        success: function (response) {
                            $("#divLoader").hide();

                            if (response != null) {
                                if (response.result) {
                                    $("#fileName" + fileId).text(filename);
                                    $("#" + fileId + "Path").val(response.fpath);
                                    var Url = response.fpath.replace('~/', '');
                                    $("#" + fileId + "Anchor").empty();
                                    $("#" + fileId + "Anchor").attr('href', Url);
                                    //$("#" + fileId + "Anchor").show();
                                    $("#" + fileId + "Anchor").append('<a href="' + '@Url.Content("~/")' + Url + '" target="_blank" class="btn btn-warning anchor"><i class="fa fa-download"></i></a>');
                                    swal("", "File upload successfully. ", "success")
                                }
                                else {
                                    swal("", response.mesg, "error")
                                }
                            }
                            else {
                                swal("", "Fail to Upload File", "error")
                            }
                            return false;

                        },
                        error: function (e) {

                            $("#divLoader").hide();
                            swal("", "An Error Occured while uploading file", "error");
                        }
                    });

                }
                break;
            default:
                swal("", 'File should be in PDF/JPG/JPEG format./फाइल PDF/JPG/JPEG प्रारूप में होनी चाहिए।', "warning");
                this.value = '';
                return false;
        }

    }
</script>


